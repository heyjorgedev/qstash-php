{
    "name": "heyjorgedev/qstash-php",
    "description": "QStash SDK for PHP - QStash is an HTTP based messaging and scheduling solution for serverless and edge runtimes",
    "keywords": [
        "qstash",
        "upstash",
        "queue",
        "scheduler",
        "cronjob"
    ],
    "homepage": "https://github.com/heyjorgedev/qstash-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Jorge Lapa",
            "email": "2780099+heyjorgedev@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "php-http/discovery": "^1.19.4",
        "psr/http-client": "^1.0.3",
        "psr/http-client-implementation": "^1.0.1",
        "psr/http-factory-implementation": "*",
        "psr/http-message": "^1.1.0|^2.0.0",
        "web-token/jwt-library": "^4.0",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.8.1",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.0",
        "spatie/ray": "^1.28",
        "nunomaduro/collision": "^8.1.1"
    },
    "autoload": {
        "psr-4": {
            "HeyJorgeDev\\QStash\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HeyJorgeDev\\QStash\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
